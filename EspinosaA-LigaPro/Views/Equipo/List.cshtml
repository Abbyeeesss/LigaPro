@model IEnumerable<EspinosaA_LigaPro.Models.Equipo>

@{
    ViewData["Title"] = "List";
}

<h1 class="mb-4">Listado de Equipos</h1>

<p>
    <a class="btn btn-primary rounded-pill shadow-sm px-4 py-2" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Crear nuevo
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.PartidosJugados)</th>
            <th>@Html.DisplayNameFor(model => model.PartidosGanados)</th>
            <th>@Html.DisplayNameFor(model => model.PartidosEmpatados)</th>
            <th>@Html.DisplayNameFor(model => model.PartidosPerdidos)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.PartidosJugados)</td>
                <td>@Html.DisplayFor(modelItem => item.PartidosGanados)</td>
                <td>@Html.DisplayFor(modelItem => item.PartidosEmpatados)</td>
                <td>@Html.DisplayFor(modelItem => item.PartidosPerdidos)</td>
                <td>
                    <a class="btn btn-outline-success btn-sm rounded-pill me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn btn-outline-danger btn-sm rounded-pill" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
